<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.JingdianmenpiaoDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.JingdianmenpiaoEntity" id="jingdianmenpiaoMap">
        <result property="dingdanbianhao" column="dingdanbianhao"/>
        <result property="jingdianmingcheng" column="jingdianmingcheng"/>
        <result property="jingdianleixing" column="jingdianleixing"/>
        <result property="jingdianzhaopian" column="jingdianzhaopian"/>
        <result property="goupiaoshijian" column="goupiaoshijian"/>
        <result property="menpiaojiage" column="menpiaojiage"/>
        <result property="shuliang" column="shuliang"/>
        <result property="zongjia" column="zongjia"/>
        <result property="goupiaobeizhu" column="goupiaobeizhu"/>
        <result property="yonghuzhanghao" column="yonghuzhanghao"/>
        <result property="yonghuxingming" column="yonghuxingming"/>
        <result property="ispay" column="ispay"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.JingdianmenpiaoVO" >
		SELECT * FROM jingdianmenpiao  jingdianmenpiao         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.JingdianmenpiaoVO" >
		SELECT  jingdianmenpiao.* FROM jingdianmenpiao  jingdianmenpiao 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.JingdianmenpiaoView" >

		SELECT  jingdianmenpiao.* FROM jingdianmenpiao  jingdianmenpiao 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.JingdianmenpiaoView" >
		SELECT * FROM jingdianmenpiao  jingdianmenpiao <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM jingdianmenpiao
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM jingdianmenpiao
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM jingdianmenpiao
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM jingdianmenpiao
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM jingdianmenpiao
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>




</mapper>
